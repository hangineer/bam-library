{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["ESNext", "ScriptHost", "DOM", "DOM.Iterable"],
    "types": ["react", "react-dom", "node"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.stories.ts", "**/*.stories.tsx"]
}
